{
    "compilerOptions": {

        "target": "ES2020",
        "module": "ESNext", 
        "lib": [
            "ES2020"
        ],

        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,

        "baseUrl": "./src",
        "paths": {
            "@core/*": [
                "core/*"
            ],
            "@app/*": [
                "application/*"
            ],
            "@infra/*": [
                "infrastructure/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },

        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,

        "types": [
            "node",
            "express"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}